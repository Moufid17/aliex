{% extends 'back_base.html.twig' %}

{% block title %}Adresses | ADMIN - Aliex{% endblock %}

{% block content %}
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4 d-inline-block">Adresses</h1>
            <a class="btn btn-dark d-inline-block mt-4 float-end" href="{{ path('app_admin_addresses_add') }}">Ajouter</a>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_index') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Adresses</li>
            </ol>
            <div class="card mb-4">
                <div class="card-body">
                    INFORMATIONS
                    <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
                    .
                </div>
            </div>
            <!-- TABLES -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    ADRESSES
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Rue</th>
                                <th>Ville</th>
                                <th>Code postal</th>
                                <th>Pays</th>
                                <th>Numéro</th>
                                <th>Utilisateur</th>
                                <th>Société</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for address in addresses %}
                            <tr>
                                <td>{{ address.name }}</td>
                                <td>{{ address.street }}</td>
                                <td>{{ address.city }}</td>
                                <td>{{ address.codepostal }}</td>
                                <td>{{ address.country }}</td>
                                <td>{{ address.phone }}</td>
                                <td>{{ address.owner.firstname }} {{ address.owner.lastname }}</td>
                                <td>{{ address.company }}</td>
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a class="d-inline-block"
                                           href="{{ path('app_admin_addresses_edit', {'id': address.id }) }}">
                                            <span class="fa fa-pencil" style="font-size:22px; color: black"></span>
                                        </a>
                                        <form class="d-inline-block px-3" method="post" action="{{ path('app_admin_addresses_delete', {'id': address.id }) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer cette adresse');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                            <button class="border-0 bg-transparent" style="font-size:22px"><span class="fa fa-trash"></span></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>                                    
                    </table>
                </div>
            </div>
            <!-- TABLES -->
        </div>
    </main>
{% endblock %}