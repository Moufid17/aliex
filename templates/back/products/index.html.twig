{% extends 'back_base.html.twig' %}

{% block title %}Produits | ADMIN - Aliex{% endblock %}

{% block content %}
    <div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1 class="mt-4 d-inline-block">Produits</h1>
            <a class="btn btn-dark d-inline-block mt-4 float-end"
               href="{{ path('app_admin_products_add') }}">Ajouter</a>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_index') }}">Dashboard</a></li>
                <li class="breadcrumb-item active">Adresses</li>
            </ol>
            <div class="card mb-4">
                <div class="card-body">
                    INFORMATIONS
                    <a target="_blank" href="https://datatables.net/">official DataTables documentation</a>
                    .
                </div>
            </div>
            <!-- TABLES -->
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    ADRESSES
                </div>
                <div class="card-body">
                    <table id="datatablesSimple">
                        <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Poids</th>
                            <th>Description</th>
                            <th>Cat√©gorie</th>
                            <th>Prix</th>
                            {#<th>Image</th>#}
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.name }}</td>
                                <td>{{ product.weight }}</td>
                                <td>{{ product.description }}</td>
                                <td>{{ product.category.name }}</td>
                                <td>{{ product.price }}</td>
                                {#<td><img class="card-img-top w-100"
                                         src="{{ vich_uploader_asset(this.card, 'imageFile') ? vich_uploader_asset(product.imageFile, 'imageFile'):asset('images/products/default-product_main_image.jpg') }}"
                                         alt="Card image cap"></td>#}
                                <td>
                                    <div class="d-flex justify-content-around">
                                        <a class="d-inline-block"
                                           href="{{ path('app_admin_products_edit', {'id': product.id }) }}">
                                            <span class="fa fa-pencil" style="font-size:22px; color: black"></span>
                                        </a>
                                        <form class="d-inline-block px-3" method="post"
                                              action="{{ path('app_admin_products_delete', {'id': product.id }) }}"
                                              onsubmit="return confirm('Are you sure you want to delete this product ?');">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ product.id) }}">
                                            <button class="border-0 bg-transparent" style="font-size:22px"><span
                                                        class="fa fa-trash"></span></button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- TABLES -->
        </div>
    </main>
{% endblock %}