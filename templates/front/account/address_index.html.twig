{% extends 'base.html.twig' %}

{% block title %}{{app.user.username}} - Addresses | Aliex{% endblock %}

{% block content %}
<div class="container-fluid">
    <h2 class="d-inline-block">ADDRESSES</h2>
    <a href="{{path('app_account_user_address_add')}}" class="btn btn-block btn-dark w-25 d-inline-block" style="float:right;">Ajouter</a>
    <hr>
    {% if app.user.addresses|length > 0 %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Adresses</th>
                <th scope="col">Téléphone</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
        {% for address in app.user.addresses %}
                <tr>
                    <td>{{ address.name }}</td>
                    <td>
                        {{ address.street ~ ', '}} {{address.city}} <br>
                        {{ address.codepostal ~ ', '}} {{address.country}}
                    </td>
                    <td>{{ address.phone }}</td>
                    <td>
                        <div class="d-flex justify-content-around">
                            <a class="d-inline-block" href="{{ path('app_account_user_address_edit', {'id': address.id }) }}">
                                <span class="icon fontawesome-pencil account-scnd-font-color" style="font-size:22px"></span>
                            </a>
                            <form class="d-inline-block px-3" method="post" action="{{ path('app_account_user_address_delete', {'id': address.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ address.id) }}">
                                <button class="icon fontawesome-trash account-scnd-font-color border-0" style="font-size:22px"></button>
                            </form>
                        </div>
                    </td>
                </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
            <p>Votre Liste d'adresse est vide.</p>
    {% endif %}
    </div>
{% endblock %}
