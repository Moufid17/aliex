{% extends 'base.html.twig' %}

{% block title %}Commandes - Aliex{% endblock %}

{% block content %}
<div class="container-fluid pt-4">
    <h3>Commandes</h3>
    <hr>
    <div class="row">
        <div class="col-6 d-block">
            {% set formHtml %}
            {# Le submit de ce formulaire se fera sur la route <app_order_recap>. #}
            {{ form_start(form, {action:path('app_order_recap')}) }}
                {{ form_label(form.addresses, 'Choisissez votre addresse de livraison') }} <a href="{{ path('app_account_user_address_add') }}">Ajouter une nouvelle adresse</a>
            {{ form_end(form) }}
            {% endset %}
            {{ formHtml|replace({'[br]':'<br>'})|raw }}
        </div>
        <div class="col-6 ">
            <h5>RÃ©capitulatif de ma commande</h5>
            <div class="order-summary">
                {% for key,element in cart %}
                <div class="row {% if key > 0 %}mt-2{% endif %}">
                    <div class="col-3">
                        <img class="card-img-top w-100" src="{{ vich_uploader_asset(element.product, 'imageFile') }}" alt="{{element.product.name}}" height="75px">
                    </div>
                    <div class="col-7 my-auto">
                        <strong>{{ element.product.name}}</strong><br>
                        <small>{{ element.product.name}}</small>
                    </div>
                    <div class="col-2 my-auto">x {{ element.qte }}</div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {# <div class="row justify-content-center">
        <button name="order[submit]" id="order_submit" class="col-6 btn btn-dark btn-block float-center" type="submit" height="w-50">Valider ma commande</button name="order[submit]" id="order_submit">
    </div> #}
</div>
{% endblock %}
