{% extends 'base.html.twig' %}

{% block title %}Produits - Aliex{% endblock %}

{% block content %}
    <h1>PRODUITS</h1>
    <div class="row">
        <div class="col-md-3">
            <h3>Filtre</h3>
            {{form_start(form)}}
                {{form_rest(form)}}
                <button class="btn btn-dark btn-block" type="submit">Filtrer</button> 
            {{form_end(form)}}
        </div>
        <div class="col-md-9">
            {% for product in products %}
                {{ component('card', {'id' : product.id}) }}
                {% else %}
                <div class="col-6">
                    <p> Aucun produit disponible.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}