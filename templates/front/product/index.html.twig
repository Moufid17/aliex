{% extends 'base.html.twig' %}

{% block title %}Produits - Aliex{% endblock %}

{% block content %}
    <h1>PRODUITS</h1>
    <div class="row">
        <div class="col-md-3">
            <hr class="w-75">
            <h3>Filtre</h3>
            {{form_start(form)}}
                <div class="w-75">
                    {{form_row(form)}}
                </div>
                <button class="btn btn-dark btn-block w-75" type="submit">Filtrer</button>
            {{form_end(form)}}
        </div>
        <div class="col-md-9">
            <div class="row justify-content-between">
                {% for product in products %}
                    {{ component('card', {'id' : product.id}) }}
                {% else %}
                <div class="col-6">
                    <p> Aucun produit disponible.</p>
                </div>
            {% endfor %}

       <!--pagination-->

         <div class="pagination">
            </div>
        </div>
        {{ knp_pagination_render(products, '@KnpPaginator/Pagination/twitter_bootstrap_v3_pagination.html.twig') }}


   {% endblock %}