{% extends 'base.html.twig' %}

{% block title %}Se connecter - Aliex{% endblock %}

{% block content %}
<div class="d-flex justify-content-center align-items-center">
    <div class="">
    <form method="post" class="border shadow">
        <div class="m-5">
            <div class="row text-center">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
                <hr>
            </div>
            <div class="row align-items-between">
                <div class="col-12">
                    <label for="inputEmail"><strong>Email</strong></label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                </div>
                <div class="col-12">
                    <label for="inputPassword"><strong>Mot de passe</strong></label>
                    <input type="password" name="password" id="inputPassword" class="form-control btn-sm mb-1" autocomplete="current-password" required>
                </div>
                <div class="mb-3">
                    <span><a class="text-decoration-none" href="{{ path('app_register')}}"> Ou créer un compte</a></span>
                    <span><a class="text-decoration-none float-end" href="{{ path('app_forgot_password_request')}}" > Mot de passe oublié </a></span>
                </div>
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate_') }}">
            </div>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
            <div class="row">
                <div class="col-md-12 text-center">
                    <button class="btn btn-dark btn-dark w-50" type="submit">
                        Se connecter
                    </button>
                </div>
            </div>
        </div>
    </form>
    </div>
</div>
{% endblock %}
